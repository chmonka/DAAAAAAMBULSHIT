<Page x:Class="TestDem.Pages.EmployeEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TestDem.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EmployeEditPage"
      Background="White">
    <Grid x:Name="EmployeEditData">
        <StackPanel Width="250">
            
            <TextBox Text="{Binding Name}" Margin="0 20 0 0"/>
            <TextBox Text="{Binding MidName}" Margin="0 20 0 0"/>
            <TextBox Text="{Binding LastName}" Margin="0 20 0 0"/>
            <TextBox Text="{Binding Login}" Margin="0 20 0 0"/>
            <TextBox Text="{Binding Password}" Margin="0 20 0 0"/>
            <ComboBox SelectedValue="{Binding RoleID}" SelectedValuePath="RoleID" x:Name="ComBoxRole"/>
            <Button Content="Сохранить изменения" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Page>
