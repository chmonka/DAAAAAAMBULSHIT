<Page x:Class="TestDem.Pages.LogIn"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TestDem.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="300"
      Title="LogIn"
      Background="White">

    <Grid>
        <StackPanel Width="250px" Height="250px" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="Логин"/>
            <TextBox TextWrapping="Wrap" Width="250" x:Name="Login"/>
            <Label Content="Пароль"/>
            <PasswordBox  Width="250" x:Name="Password"/>
            <Button Content="Войти" Click="Button_Click"/>
            <Button Background="Transparent" Content="Зарегестрируйтесь" BorderBrush="Transparent" Click="Button_Click_1"/>
        </StackPanel>
    </Grid>
</Page>
